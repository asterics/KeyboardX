    <dimension cols="10" rows="4" />
    <!-- row 0 -->
    <button id="btn0-0">
      <position x="0" y="0" />
      <icon>basic\png\light56.png</icon>
      <style>
        <buttonBackColor>#009696</buttonBackColor>
      </style>
      <action xsi:type="tcp">
        <destination ref="tcp1"/>
        <message>toggle</message>
      </action>
    </button>
    <button id="btn1-0">
      <position x="1" y="0" />
      <icon>basic\png\speech64.png</icon>
      <style>
        <buttonBackColor>#009696</buttonBackColor>
      </style>
      <action xsi:type="tts">Hier wird schön gesprochen!</action>
    </button>
    <button id="btn2-0">
      <position x="2" y="0" dimX="2" />
